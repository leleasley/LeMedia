# App
NODE_ENV=production
PORT=3010
NEXT_PUBLIC_APP_NAME=
APP_BASE_URL=
INTERNAL_APP_BASE_URL=http://lemedia-web:3010 #Edit as needed for calendar
NOTIFICATIONS_ENABLED=true
NEXT_PUBLIC_MEDIA_GRID_INITIAL_PAGES=2


#JELLYFIN - CONFIGURE TO ALLOW HTTP IF NOT SERVING HTTPS LOCALLY FOR JELLYFIN
JELLYFIN_ALLOWED_CIDRS=your.internal.network.cidr/here
JELLYFIN_ALLOW_HTTP=true/false

#
NEXT_PUBLIC_PLEX_URL=http://plex:32400

# Email (SMTP) - now able to set in WEB gui via Notification settings

# Auth
SESSION_SECRET=change-me-please-change-me-please
SERVICES_SECRET_KEY=change-me-please
SERVICES_SECRET_KEY_PREVIOUS=

# Dev bypass (only for local dev; leave empty in production)
DEV_USER=
DEV_GROUPS=
ALLOW_DEV_BYPASS=0

# TMDB
TMDB_API_KEY=changeme
OMDB_API_KEY=changeme

# Sonarr
SONARR_URL=http://sonarr:8989
SONARR_ALLOW_PRIVATE_IPS=true/false
SONARR_ALLOWED_CIDRS=your.internal.network.cidr/here

# Radarr
RADARR_URL=http://radarr:7878
RADARR_ALLOW_PRIVATE_IPS=true/false
RADARR_ALLOWED_CIDRS=your.internal.network.cidr/here

# Database (Postgres)
DATABASE_URL=postgres://mediaops:mediaops@mediaops-db:5432/mediaops
POSTGRES_DB=lemedia
POSTGRES_USER=lemedia
POSTGRES_PASSWORD=change-me

# Redis (rate limiting / distributed locks)
REDIS_URL=redis://lemedia-redis:6379

# Backup storage (mounted path inside web container)
BACKUP_DIR=/data/backups

# Web Push Notifications (PWA)
# Generate VAPID keys by running: node apps/web/generate-vapid-keys.js
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_EMAIL=noreply@yourdomain.com

# Webhook notifications
WEBHOOK_ALLOW_HTTP=true/false
WEBHOOK_ALLOW_PRIVATE_IPS=true/false
WEBHOOK_ALLOWED_CIDRS=your.internal.network.cidr/here

# Cloudflare Turnstile
NEXT_PUBLIC_TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=
