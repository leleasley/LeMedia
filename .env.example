# App
NODE_ENV=production
PORT=3010
NEXT_PUBLIC_APP_NAME=
APP_BASE_URL=
NOTIFICATIONS_ENABLED=true
NEXT_PUBLIC_MEDIA_GRID_INITIAL_PAGES=2

# Email (SMTP) - used by Email notification endpoints
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
SMTP_SECURE=false

# Auth
AUTH_ADMIN_GROUP=admins
SESSION_SECRET=change-me-please-change-me-please
SERVICES_SECRET_KEY=change-me-please
SERVICES_SECRET_KEY_PREVIOUS=

# Dev bypass (only for local dev; leave empty in production)
DEV_USER=
DEV_GROUPS=
ALLOW_DEV_BYPASS=0

# Seed a first user into the database (optional once DB has users)
APP_SEED_USER=
APP_SEED_PASSWORD=
APP_SEED_GROUPS=admins

# TMDB
TMDB_API_KEY=changeme
OMDB_API_KEY=changeme

# Sonarr
SONARR_URL=http://sonarr:8989
SONARR_API_KEY=changeme
SONARR_ROOT_FOLDER= your mount folder
SONARR_QUALITY_PROFILE_ID=1
SONARR_LANGUAGE_PROFILE_ID=1
SONARR_SERIES_TYPE=standard
SONARR_SEASON_FOLDER=true

# Radarr
RADARR_URL=http://radarr:7878
RADARR_API_KEY=changeme
RADARR_ROOT_FOLDER= your mount folder
RADARR_QUALITY_PROFILE_ID=1
RADARR_MINIMUM_AVAILABILITY=released

# Database (Postgres)
DATABASE_URL=postgres://mediaops:mediaops@mediaops-db:5432/mediaops
POSTGRES_DB=lemedia
POSTGRES_USER=lemedia
POSTGRES_PASSWORD=change-me

# Web Push Notifications (PWA)
# Generate VAPID keys by running: node apps/web/generate-vapid-keys.js
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_EMAIL=noreply@yourdomain.com
